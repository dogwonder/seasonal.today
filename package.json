{
  "name": "dgw.ltd",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "scripts": {
    "clean": "trash \"./docs/\"",
    "css:sass": "sass ./src/scss/main.scss ./src/_includes/css/main.css",
    "css:postcss": "postcss ./src/_includes/css/main.css --use autoprefixer postcss-custom-properties cssnano --map --verbose --dir ./src/_includes/css/",
    "css": "run-s css:sass css:postcss",
    "watch:css": "onchange \"**/*.scss\" -- npm run css --silent",
    "watch:eleventy": "npx eleventy --serve",
    "watch": "run-p watch:*",
    "move:cname": "copyfiles --flat src/CNAME docs/",
    "move:meta": "copyfiles --flat src/images/meta/**/* docs/assets/images/meta",
    "move": "run-p move:*",
    "build": "NODE_ENV=production run-p css && NODE_ENV=production npx eleventy && run-p move"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^3.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "cssnano": "^7.0.6",
    "del": "^8.0.0",
    "dotenv": "^16.5.0",
    "html-minifier": "^4.0.0",
    "luxon": "^3.6.1",
    "markdown-it": "^14.1.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-custom-properties": "^14.0.4",
    "postcss-import": "^16.1.0",
    "postcss-scss": "^4.0.9",
    "sass": "^1.86.3",
    "trash-cli": "^6.0.0"
  }
}
