{
  "name": "dgw.ltd",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "scripts": {
    "clean": "trash \"./docs/\"",
    "css:sass": "sass ./src/scss/main.scss ./src/_includes/css/main.css",
    "css:postcss": "postcss ./src/_includes/css/main.css --use autoprefixer postcss-custom-properties cssnano --map --verbose --dir ./src/_includes/css/",
    "css": "run-s css:sass css:postcss",
    "watch:css": "onchange \"**/*.scss\" -- npm run css --silent",
    "watch:eleventy": "npx eleventy --serve",
    "watch": "run-p watch:*",
    "move:cname": "copyfiles --flat src/CNAME docs/",
    "move:meta": "copyfiles --flat src/images/meta/**/* docs/assets/images/meta",
    "move": "run-p move:*",
    "build": "NODE_ENV=production run-p css && NODE_ENV=production npx eleventy && run-p move",
    "cy:run": "cypress run"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axe-core": "^4.5.2",
    "@11ty/eleventy": "^2.0.0-beta.1",
    "autoprefixer": "^10.4.5",
    "concurrently": "^5.3.0",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.8",
    "cypress": "^11.1.0",
    "cypress-axe": "^1.0.0",
    "del": "^5.1.0",
    "dotenv": "^16.0.0",
    "eleventy-plugin-svg-contents": "^0.7.0",
    "html-minifier": "^4.0.0",
    "luxon": "^2.3.2",
    "markdown-it": "^13.0.1",
    "node-fetch": "^2.6.7",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-custom-properties": "^11.0.0",
    "postcss-import": "^14.0.2",
    "postcss-scss": "^4.0.0",
    "sass": "^1.40.1",
    "trash-cli": "^5.0.0"
  }
}
